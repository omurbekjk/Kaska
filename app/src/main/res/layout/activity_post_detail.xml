<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:tools="http://schemas.android.com/tools">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        style="@style/toolbar"
        app:contentInsetStart="0dp">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/casca"
                android:paddingTop="12dp"
                android:paddingBottom="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.Toolbar>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/post_user_photo_image"
        style="@style/icon"
        android:src="@drawable/person"
        app:layout_constraintTop_toBottomOf="@id/toolbar"/>
    <TextView
        android:id="@+id/post_username_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="willsmith"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/post_user_photo_image"
        app:layout_constraintTop_toTopOf="@id/post_user_photo_image"
        app:layout_constraintBottom_toBottomOf="@id/post_user_photo_image"/>


    <ImageView
        android:id="@+id/post_like_image"
        app:layout_constraintTop_toBottomOf="@id/section_tabs_appbar"
        app:layout_constraintBottom_toTopOf="@id/post_likes_text"
        android:layout_height="45dp"
        android:layout_width="45dp"
        android:padding="10dp"
        android:src="@drawable/ic_likes_border"/>

    <ImageView
        android:id="@+id/post_comment_image"
        app:layout_constraintStart_toEndOf="@id/post_like_image"
        app:layout_constraintTop_toTopOf="@id/post_like_image"
        app:layout_constraintBottom_toBottomOf="@id/post_like_image"
        android:layout_height="45dp"
        android:layout_width="45dp"
        android:padding="10dp"
        android:src="@drawable/ic_comments_border"/>

    <ImageView
        android:id="@+id/post_share_image"
        app:layout_constraintStart_toEndOf="@id/post_comment_image"
        app:layout_constraintTop_toTopOf="@id/post_like_image"
        app:layout_constraintBottom_toBottomOf="@id/post_like_image"
        android:layout_height="45dp"
        android:layout_width="45dp"
        android:padding="10dp"
        android:src="@drawable/ic_share_border"/>

    <TextView
        android:id="@+id/post_likes_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="828,123 likes"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/post_like_image"
        app:layout_constraintBottom_toTopOf="@id/post_caption_text"
        android:layout_marginStart="10dp"/>

    <TextView
        android:id="@+id/post_caption_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="10dp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/post_likes_text"
        tools:text="willsmith This is a caption for the post. It's actually a very long caption."/>

    <android.support.v4.view.ViewPager
        android:id="@+id/post_details_section_page_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/top_border_grey"
        app:layout_constraintDimensionRatio="16:9"
        app:layout_constraintTop_toBottomOf="@id/post_user_photo_image"
        app:layout_constraintBottom_toTopOf="@id/section_tabs_appbar">
    </android.support.v4.view.ViewPager>


    <android.support.design.widget.AppBarLayout
        android:id="@+id/section_tabs_appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/post_details_section_page_container"
        app:layout_constraintBottom_toTopOf="@+id/post_like_image">

        <android.support.design.widget.TabLayout
            android:id="@+id/section_tabs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </android.support.design.widget.TabLayout>
    </android.support.design.widget.AppBarLayout>

    <include layout="@layout/bottom_navigation_view"
        app:layout_constraintTop_toBottomOf="@+id/post_caption_text"
    android:id="@+id/bottom_navigation_view"
    />

</android.support.constraint.ConstraintLayout>